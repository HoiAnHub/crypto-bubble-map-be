# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Ethereum Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_RPC_URL_BACKUP=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
ETHEREUM_NETWORK=mainnet

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/crypto_bubble_map
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crypto_bubble_map
DB_USER=username
DB_PASSWORD=password

# Neo4j Configuration
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# External APIs
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
COINGECKO_API_KEY=YOUR_COINGECKO_API_KEY

# Caching Configuration
CACHE_TTL_WALLET_DETAILS=300
CACHE_TTL_TRANSACTIONS=600
CACHE_TTL_NETWORK_DATA=900

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
JWT_SECRET=your-super-secret-jwt-key
API_KEY=your-api-key-for-authentication

# Performance
MAX_NETWORK_DEPTH=3
MAX_TRANSACTIONS_PER_REQUEST=100
BATCH_SIZE=50
